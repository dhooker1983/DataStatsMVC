@model IEnumerable<Employee>

<h2 class="m-2">Employees</h2>

<table class="table table-hover mt-2">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">First Name</th>
            <th scope="col">Surname</th>
            <th scope="col">Department</th>
            <th scope="col">Start Date</th>
            <th scope="col">Age</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var emp in Model)
        {
        <tr>
            <td scope="row">#</td>
            <td scope="row">@emp.FirstName</td>
            <td scope="row">@emp.Surname</td>
            <td scope="row">@emp.Department.Name</td>
            <td scope="row">@emp.StartDate.ToShortDateString()</td>
            <td scope="row">@emp.Age.ToShortDateString()</td>
        </tr>
        }
    </tbody>
</table>