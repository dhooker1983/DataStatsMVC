@model IEnumerable<Employee>

<h2 class="m-3">Employees</h2>

<table class="table table-hover mt-2">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">First Name</th>
            <th scope="col">Surname</th>
            <th scope="col">Department</th>
            <th scope="col">Start Date</th>
            <th scope="col">Age</th>
            <th scope="col">Employed</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var emp in Model)
        {
        <tr>
            <td scope="row">#</td>
            <td scope="row">@emp.FirstName</td>
            <td scope="row">@emp.Surname</td>
            <td scope="row">@emp.Department.Name</td>
            <td scope="row">@emp.StartDate.ToShortDateString()</td>
            <td scope="row">@emp.Age</td>
            <td scope="row">
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" asp-for="@emp.CurrentlyEmployed">
                </div>
            </td>
        </tr>
        }
    </tbody>
</table>