
@model EmployeeViewModel

<h2 class="m-4">Employee Call by Range</h2>

<form asp-controller="Call" asp-action="PostRangeByEmployee" method="post" role="form" class="m-3 w-25">
   
    <div class="form-group m-1">
        <label asp-for="@Model.Name">Please select a department</label>
        <select class="form-control" asp-for="@Model.Name">
            @foreach (var item in @Model.Employees)
           {
               <option>@item.Name</option>
           }
        </select>
    </div>

    <div class="form-group m-1">
        <label asp-for="@Model.RangeStart">Start Date</label>
        <input type="date" asp-for="@Model.RangeStart" class="form-control" />
    </div>

    <div class="form-group m-1">
        <label asp-for="@Model.RangeEnd">End Date</label>
        <input type="date" asp-for="@Model.RangeEnd" class="form-control" />
    </div>
        
    <button class="btn btn-primary mt-3 ml-2" type="submit">Submit</button>
</form>

