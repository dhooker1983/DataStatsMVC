@model IEnumerable<Call>

<button style="width:auto" class="mt-4 mb-4 mx-auto btn btn-warning">
    Toggle View
</button>

<table class="table table-hover mt-2 mx-auto">
    <thead class="bg-light">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Deparment</th>
            <th scope="col">Date</th>
            <th scope="col">AHT</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var call in Model)
        {
            <tr>
                <td scope="row">#</td>
                <td scope="row">@call.Department.Name</td>
                <td scope="row">@call.Start.ToShortTimeString()</td>
                <td scope="row">@call.EmployeeId</td>
            </tr>
        }
    </tbody>
</table>


